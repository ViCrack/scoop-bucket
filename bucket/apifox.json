    "architecture": {
        "32bit": {
            "url": "https://file-assets.apifox.com/download/2.7.0/Apifox-windows-x86-2.7.0.exe#/dl.7z",
            "hash": "ff061a55791e29469637b70ce6b8733d8914046feb88ee464800968a15db591a"
        },
        "64bit": {
            "url": "https://file-assets.apifox.com/download/2.7.0/Apifox-2.7.0.exe#/dl.7z",
            "hash": "9b5e557633e7d9fb0d81f2f822ceea14a478358b96ef6031cf32b70303bbcd63"
        }
    },
    "pre_install": [
        "Get-Item \"$dir\\`$PLUGINSDIR\\app*.7z\" | Expand-7zipArchive -DestinationPath \"$dir\"",
        "Remove-Item \"$dir\\`$*\", \"$dir\\Uninstall*\" -Force -Recurse"
    ],
    "shortcuts": [
        [
            "Apifox.exe",
            "Apifox",
            "--user-data-dir=\"$dir\\UserData\""
        ]
    ],
    "persist": "UserData",
    "checkver": {
        "url": "https://apifox.com/help/release/changelog.json",
        "regex": "\"version\": \"([\\d.]+)\""
    },
    "autoupdate": {
        "architecture": {
            "32bit": {
                "url": "https://file-assets.apifox.com/download/$version/Apifox-windows-x86-$version.exe#/dl.7z"
            },
            "64bit": {
                "url": "https://file-assets.apifox.com/download/$version/Apifox-$version.exe#/dl.7z"
            }
        }
    }
